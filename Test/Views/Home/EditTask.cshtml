@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Test.Models.Item
<h2>Task № @Model.Id</h2>
@using (Html.BeginForm("EditItem", "Home", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m=> m.FirstData)
        @Html.HiddenFor(m => m.LastData)
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.name, "Name")
            <br />
            @Html.EditorFor(m => m.name)
        </p>
        <p>
            @Html.LabelFor(m => m.rating, "Rating")
            <br />
            @Html.EditorFor(m => m.rating)             
        </p>
        <p>
            @Html.LabelFor(m => m.IsComplate, "IsComplate")
            <br />
            @Html.EditorFor(m => m.IsComplate)

        </p>

      
        
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}