@using Test.Models
@model Item
@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())

{

    <fieldset>
        <legend>Task</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label"><b>Name</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
        </div>

        <div class="editor-label"><b>Rating</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rating)
        </div>
        <div class="editor-label"><b>Tag</b></div>
        @{ int Counter = 0;}
        @foreach (Tag c in ViewBag.Tag)
        {
            <input type="checkbox" name="selectedTag[@Counter]" value="@c.Id"
                   @(Model.Tag.Contains(c) ? "checked=\"checked\"" : "") />@c.name <br />
            Counter++;
        }

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}